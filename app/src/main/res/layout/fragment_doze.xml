<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".data.DozeFragment">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заполните поля количество и частоту принимаего лекарства"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewDoza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество лекарства"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNumberDoz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Частота принимаего лекарства"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/editTextNumberEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />


    </LinearLayout>


</LinearLayout>